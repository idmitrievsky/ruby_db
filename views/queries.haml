.row
  .span12{:style => "overflow: auto"}
    %table.table.table-striped.table-bordered
      %thead
        %tr
          - keys.each do |key|
            - if key != "id"
              %th= key
          %th Письмо
      - i = -1
      - results.each do |row|
        - i += 1
        %tr
          - row.each do |key, val|
            - if val.class == BigDecimal
              %td= val.to_s('F')
            - elsif key == "Принят?"
              %td= "#{val == 2 ? "Да" : "Нет"}"
            - elsif key != "id"
              %td= val 
          %td
            .btn.btn-small.btn-success{:id => "btn#{row['id']}", :class => "mail"} Отправить
          
